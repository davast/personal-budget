<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <header class="main-header">
      <div class="month-search">
        <div class="col">
          <form action="/search-by-month" method="POST">
            <input type="search" placeholder="Search by month" />
            <button type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="search">
        <div class="col">
          <form action="/search-by-type" method="POST">
            <input type="search" placeholder="Search by type" />
            <button type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="menu">
        <input type="image" name="plus" src="img/menu.png" alt="plus" />
      </div>
    </header>
    <main>
      <div class="container nav">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <a class="nav-link active" href="/main">Main </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/expenses">Latest expenses </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col">
          <div class="row">
            <div class="plus" onclick="myFunction()">
              <input
                class="icon"
                type="image"
                name="plus"
                src="img/plus.png"
                alt="plus"
              />
            </div>
          </div>
          <div class="container" id="myDIV">
            <form class="form-label" action="/report-expense" method="POST">
              <div class="row">
                <div class="col-2">
                  <input
                    type="image"
                    class="icon"
                    name="type"
                    src="img/type.png"
                    alt="type"
                  />
                </div>
                <div class="col-4 align-self-center">
                  <label class="fileds" for="type">expense Type:</label>
                </div>
                <div class="col-6 align-self-center">
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="type"
                    id="type"
                  >
                    <option value="loan-payment">Loan payment</option>
                    <option value="expense-Lana">expense Lana</option>
                    <option value="utility-fee">Utility fee</option>
                    <option value="espp">ESPP</option>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <input
                    type="image"
                    class="icon"
                    name="name"
                    src="img/name.png"
                    alt="name"
                  />
                </div>
                <div class="col-4 align-self-center">
                  <label for="name">expense Name</label>
                </div>
                <div class="col-6 align-self-center">
                  <input
                    class="form-control"
                    type="text"
                    name="name"
                    id="name"
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <input
                    type="image"
                    class="icon"
                    name="comment"
                    src="img/comment.png"
                    alt="comment"
                  />
                </div>
                <div class="col-4 align-self-center">
                  <label for="comment">Add comment</label>
                </div>
                <div class="col-6 align-self-center">
                  <input
                    class="form-control"
                    type="text"
                    name="comment"
                    id="comment"
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <input
                    type="image"
                    class="icon"
                    name="date"
                    src="img/date.png"
                    alt="date"
                  />
                </div>
                <div class="col-4 align-self-center">
                  <label for="date">Date</label>
                </div>
                <div class="col-6 align-self-center">
                  <input
                    class="form-control"
                    type="date"
                    name="date"
                    id="date"
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <input
                    type="image"
                    class="icon"
                    name="amount"
                    src="img/amount.png"
                    alt="amount"
                  />
                </div>
                <div class="col-4 align-self-center">
                  <label for="amount">Amount</label>
                </div>
                <div class="col-6 align-self-center">
                  <input
                    class="form-control"
                    type="number"
                    name="amount"
                    id="amount"
                    step="1"
                  />
                </div>
              </div>
              <div class="row">
                <button class="btn btn-primary" type="submit">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <div class="col">
          <div class="ration">
            <div class="row">
              <div class="col">
                <h1>Salary</h1>
              </div>
              <div class="col">
                <h1>610.000</h1>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <h4>Overall expenses</h4>
              </div>
              <div class="col">
                <h2></h2>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <h4>Available</h4>
              </div>
              <div class="col">
                <h2></h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      function myFunction() {
        var x = document.getElementById("myDIV");
        if (x.style.display === "block") {
          x.style.display = "none";
        } else {
          x.style.display = "block";
        }
      }
    </script>
  </body>
</html>
