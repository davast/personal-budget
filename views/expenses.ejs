<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <header class="main-header">
      <div class="month-search">
        <div class="col">
          <form>
            <input type="search" placeholder="Search by month" />
            <button type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="search">
        <div class="col">
          <form>
            <input type="search" placeholder="Search by type" />
            <button type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="menu">
        <input type="image" name="plus" src="img/menu.png" alt="plus" />
      </div>
    </header>
    <main>
      <div class="container nav">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <a class="nav-link" href="/main">Main </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/expenses"
              >Latest expenses
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
      </div>
      <% if (expenses.length > 0) { %> <% for (let expense of expenses) {%>
      <div class="container">
        <div class="row">
          <div class="col">
            <h4>Expense type <%=expense.type%></h4>
            <h4>Expense name <%=expense.name%></h4>
            <h4>Expense comment <%=expense.comment%></h4>
            <h4>Expense date <%=expense.date%></h4>
          </div>
          <div class="col">
            <h4>Amount <%=expense.amount%></h4>
          </div>
        </div>
      </div>
      <% } %> <% } else { %>
      <img src="img/empty.png" alt="" />
      <% } %>
    </main>
  </body>
</html>
